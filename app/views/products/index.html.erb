<h1> Practical Steel Products </h1>




<div id="masonry-container" class="transitions-enabled clearfix rtl">
<% @products.each_with_index do |product, index| %>

  <% if index % 3 == 0 %>
    <div class="box col2">
  <% elsif index % 3 == 1 %>
    <div class="box col3">
  <% elsif index % 3 == 2%>
    <div class="box col4">
  <% end %>
      <p><%= link_to (image_tag product.image.url(:medium)), product_path(product), id: product.id %></p>
      <p><%= link_to product.name, product_path(product) %></p>
    </div>
<% end %>
</div>
